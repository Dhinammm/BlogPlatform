<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
   
  </head>

  <body>
    <%= yield %>
    
     <%= link_to "Home", root_path if !current_page?(root_path) %>
      <%= button_to "Log in", new_user_session_path unless user_signed_in? || (controller_name == "sessions" && action_name == "new") %>
      <%= button_to "Log out", destroy_user_session_path, method: :delete if user_signed_in? %>
  </body>
</html>
